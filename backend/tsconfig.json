{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2022",
        "lib": [
            "ES2021"
        ],
        "types": [
            "@cloudflare/workers-types",
            "@types/node"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}